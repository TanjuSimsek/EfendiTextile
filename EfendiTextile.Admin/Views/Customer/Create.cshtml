@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // ülke değiştiğinde..
            $("#CountryId").change(function () {
                LoadCities();
            });

            $("#CityId").change(function () {
                LoadDistricts();
            });

            function LoadCities() {
                // seçili ülkenin şehirleri getir
                $.post("@Url.Action("GetCities")", { countryId: $("#CountryId").val() },
                    function (data) {
                        // gelen şehirleri selecte aktar

                        // önce şehir selectini temizle
                        $("#CityId").empty();
                        $("#CityId").append('<option value="">Şehir seçiniz</option>');
                        // döngüyle gelen şehir datasına şehir selectine ekle
                        $.each(data, function (index, value) {
                            $("#CityId").append('<option value="' + value.Id + '">' + value.Name + '</option>');
                        });
                        LoadDistricts();
                });
            }
            function LoadDistricts() {
                $.post("@Url.Action("GetRegions")", { cityId: $("#CityId").val() },
                    function (data) {
                        // önce ilçe selectini temizle
                        $("#RegionId").empty();
                        $("#RegionId").append('<option value="">İlçe seçiniz</option>');
                        // döngüyle gelen ilçe datasına ilçe selectine ekle
                        $.each(data, function (index, value) {
                            $("#RegionId").append('<option value="' + value.Id + '">' + value.Name + '</option>');
                        });
                });
            }

        $("#createForm").submit(function () {
            if ($("#createForm").valid()) {
                var formData = new FormData($("form")[0]);
                $.ajax({
                    url: "@Url.Action("Create")",
                    type: "POST",
                    cache: false,
                    dataType: "json",
                    data: formData ? formData : formData.serialize(),
                    processData: false,
                    contentType: false
                }).done(function (data) {
                        if (data.success == true) {
                            alert("İşlem başarılı");
                        } else {
                            alert(data.message);
                        }
                });
            }
        });
