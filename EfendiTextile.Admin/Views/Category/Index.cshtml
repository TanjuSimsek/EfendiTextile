@model IEnumerable<EfendiTextile.Model.Category>
     
@{
    ViewBag.Title = "Index";
}
     
    <div class="right_col" role="main">
    

<p>
   <a href=" @Url.Action("Create")" , class="btn btn-success btn-xs">Yeni Kategori</a>
</p>
<table class="table"id="myTable">
     <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
         <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
       
        <th></th>
    </tr>
         </thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        
       
      
       
        <td>
            <a href="@Url.Action("Edit",new { id=item.Id})" class="btn btn-primary" btn-sm>Düzenle</a>
            <a href="@Url.Action("Delete",new { id=item.Id})" class="btn btn-danger" btn-sm>Sil</a>
            <a href="@Url.Action("Details",new { id=item.Id})" class="btn btn-success" btn-sm>Ayrıntılar</a>      
        </td>
    </tr>
}
    </tbody>

</table>
   </div>